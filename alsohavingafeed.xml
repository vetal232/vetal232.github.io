---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>
          {{ site.name | xml_escape }}
        </title>
        <description>
          {{ site.description | xml_escape }}
        </description>
        <link>
          {{ site.url }}
        </link>
        <atom:link href="{{ site.url }}/alsohavingafeed.xml" rel="self" type="application/rss+xml" />
        {% for p in site.posts limit:10 %}
            <item>
                <title>
                  {{ p.title | xml_escape }}
                </title>
                <description>
                  {{ p.excerpt | strip_html | xml_escape }}
                </description>
                <pubDate>
                  {{ p.date | date: "%a, %d %b %Y %H:%M:%S %z" }}
                </pubDate>
                <link>
                  {{ site.url }}{{ p.url }}
                </link>
                <guid isPermaLink="true">
                  {{ site.url }}{{ p.url }}
                </guid>
            </item>
        {% endfor %}
    </channel>
</rss>
